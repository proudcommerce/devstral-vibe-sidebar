{
  "name": "devstral-vibe-sidebar",
  "displayName": "Devstral Vibe",
  "description": "Integrate Devstral Vibe CLI terminal into VS Code",
  "version": "0.0.2",
  "publisher": "proudcommercegmbh",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/proudcommerce/devstral-vibe-sidebar"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "devstralVibe.openTerminal",
        "title": "Open Devstral Vibe",
        "icon": {
          "light": "resources/devstral-logo.svg",
          "dark": "resources/devstral-logo.svg"
        }
      },
      {
        "command": "devstralVibe.openNewTerminal",
        "title": "Open Devstral Vibe in New Terminal",
        "icon": {
          "light": "resources/devstral-logo.svg",
          "dark": "resources/devstral-logo.svg"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "devstralVibe.openTerminal",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Devstral Vibe",
      "properties": {
        "devstralVibe.command": {
          "type": "string",
          "default": "vibe",
          "description": "The command to run in the terminal (e.g., 'vibe' or custom path)",
          "scope": "window"
        },
        "devstralVibe.additionalArgs": {
          "type": "string",
          "default": "",
          "description": "Additional arguments to pass to the Vibe command",
          "scope": "window"
        }
      }
    },
    "keybindings": [
      {
        "command": "devstralVibe.openTerminal",
        "key": "ctrl+alt+v",
        "mac": "cmd+alt+v"
      },
      {
        "command": "devstralVibe.openNewTerminal",
        "key": "ctrl+shift+alt+v",
        "mac": "cmd+shift+alt+v"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.3.0"
  }
}